<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- WARNING: cleartext traffic is permitted for development only
         For production, set cleartextTrafficPermitted="false" and implement TLS/SSL -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    <!-- For production, use domain-specific config:
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">svision.example.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    -->
</network-security-config>
